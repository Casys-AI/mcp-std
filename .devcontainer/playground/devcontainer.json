{
  "name": "Casys PML Playground",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "../.."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno",
        "ms-toolsai.jupyter",
        "ms-python.python"
      ],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.unstable": true,
        "jupyter.kernels.filter": [
          {
            "path": "/root/.local/share/jupyter/kernels/deno",
            "type": "pythonEnvironment"
          }
        ]
      }
    }
  },
  "remoteEnv": {
    "AGENTCARDS_DB_PATH": "/workspaces/Casys PML/.agentcards.db",
    "AGENTCARDS_WORKFLOW_PATH": "playground/config/workflow-templates.yaml"
  },
  "postCreateCommand": "bash .devcontainer/playground/post-create.sh",
  "forwardPorts": [3000, 8888],
  "portsAttributes": {
    "3000": {
      "label": "MCP Gateway",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "openBrowser"
    }
  },
  "remoteUser": "root"
}
